<?xml version="1.0" encoding="utf-8"?>

<layout>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trailers_label"
            android:layout_margin="8dp"
            android:id="@+id/trailer_tv"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="#14202e"
            android:id="@+id/seperator_view"

            app:layout_constraintStart_toStartOf="@id/trailer_tv"
            app:layout_constraintTop_toBottomOf="@id/trailer_tv"
            app:layout_constraintEnd_toEndOf="@id/trailer_tv"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/similar_list_rv"
            android:layout_margin="8dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seperator_view"/>

    </android.support.constraint.ConstraintLayout>
</layout>
