<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        tools:context="com.dhruvam.popularmovies.activity.MovieDescriptionActivity">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/slide_layout_cl">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/header_bar">

                <ImageView
                    android:id="@+id/main_image_backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/mobie_thumbnail_img"
                    android:adjustViewBounds="true" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/movie_title_tv"
                        android:textColor="@android:color/white"
                        tools:text="@string/mobie_thumbnail_img"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:layout_margin="16dp"
                        android:textStyle="bold"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/movie_rating_tv"
                        style="@style/PopularMovies.DetailMovie.MainImage.TextView"
                        android:layout_marginStart="16dp"
                        android:textColor="#5ed149"

                        app:layout_constraintStart_toEndOf="@id/movie_release_date_tv"
                        app:layout_constraintTop_toBottomOf="@id/movie_title_tv"
                        app:layout_constraintBottom_toBottomOf="parent" />


                    <TextView
                        android:id="@+id/movie_release_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/PopularMovies.DetailMovie.MainImage.TextView"

                        app:layout_constraintStart_toStartOf="@id/movie_title_tv"
                        app:layout_constraintTop_toBottomOf="@id/movie_title_tv"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </android.support.constraint.ConstraintLayout>


            </FrameLayout>



            <TextView
                android:id="@+id/movie_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
                android:textColor="#bfbdbd"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header_bar"
                tools:text="@string/mobie_thumbnail_img" />


            <TextView
                android:id="@+id/movie_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
                android:textColor="#bfbdbd"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header_bar"
                tools:text="@string/mobie_thumbnail_img" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/similar_list_rv"
                android:layout_margin="8dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_description_tv"/>

        </android.support.constraint.ConstraintLayout>



    </ScrollView>

</layout>
