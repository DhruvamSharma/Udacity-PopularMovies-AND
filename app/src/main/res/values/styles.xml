<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="PopularMovies.ButtonAppearance" parent="">
        <item name="android:textColor">@android:color/white</item>

        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/button_animator
        </item>
    </style>

    <style name="Widget.PopularMovies.Backdrop" parent="">
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="PopularMovies.DetailMovie.MainImage.TextView" parent="">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#604d7c</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="PopularMovies.BottomSheet.RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#b7b3b3</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimaryDisableOnly">#fff</item>
        <item name="android:textColorPrimaryInverseDisableOnly">#f02</item>
    </style>

    <style name="PopularMovies.CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorControlActivated</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#C1000E</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.StatusBar.Title">
        <item name="android:textColor">#E5ED0E</item>
    </style>

</resources>

