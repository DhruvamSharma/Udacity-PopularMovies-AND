<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#442C2E</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">#303F9F</item>
    </style>

    <style name="PopularMovies.ButtonAppearance" parent="">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/button_animator
        </item>
    </style>

    <style name="Widget.PopularMovies.Backdrop" parent="">
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="PopularMovies.DetailMovie.MainImage.TextView" parent="">
        <item name="android:textColor">#969494</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Caption</item>
    </style>

</resources>
